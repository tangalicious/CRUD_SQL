/*************************************************
Name: crud_StandardFeedUpdate
Author: Chris Tang
Created: 8/06/2018
Description: Update (CRUD)

Note: Update by primary key Id

**************************************************/

IF OBJECT_ID('crud_StandardFeed') IS NOT NULL
BEGIN
	DROP PROC
		crud_StandardFeed;
END; 
GO

CREATE PROC crud_StandardFeed
	@Id INT,
	@Name VARCHAR(max),
	@Description VARCHAR(max),
	@Creator VARCHAR(max),
	@BusinessOwner VARCHAR(max),
	@ExampleFile VARCHAR(max),
	@Type VARCHAR(max),
	@Note VARCHAR(max),
	@Active bit,
	@CreateDate datetime,
	@ModifiedDate datetime,
	@CreatedBy VARCHAR(max),
	@ModifiedBy VARCHAR(max),
	@ExpirationDate datetime,
	@Activate datetime,
AS
	BEGIN
		UPDATE Feed.StandardFeed
		SET
			Name = @Name,
			Description = @Description,
			Creator = @Creator,
			BusinessOwner = @BusinessOwner,
			ExampleFile =  @ExampleFile,
			Type = @Type,
			Note = @Note,
			Active = @Active,
			CreateDate = @CreateDate,
			ModifiedDate = @ModifiedDate,
			CreatedBy = @CreatedBy,
			ModifiedBy = @ModifiedBy,
			ExpirationDate = @ExpirationDate,
			Activate = @Activate
		WHERE Id = @Id;
	END;
GO
